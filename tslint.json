{
  "extends": "tslint:recommended",
  "rules": {
      "max-line-length": {
          "options": [140]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": true,
      "trailing-comma": false,
      "indent": [true, "spaces", 4]
  },
  "jsRules": {
      "max-line-length": {
          "options": [140]
      }
  }
}